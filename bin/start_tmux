#!/bin/bash

tmux new-session -s freecandy -n root -d "sudo top"

tmux new-window -t freecandy -d -n Personal -c /home/chicks/Documents/dnetc
tmux split-window -t freecandy:Personal -c /home/chicks/Documents/personal

tmux new-window -t freecandy -d -n Mocentric "ssh server0.mocentric.com"
tmux split-window -t freecandy:Mocentric "ssh server0.mocentric.com"

tmux new-window -t freecandy -d -n git -c /home/chicks/Documents/brightroll/git
tmux split-window -t freecandy:git -c /home/chicks/Documents/personal/git

tmux new-window -t freecandy -d -n SJC "uptime; bash"
tmux split-window -t freecandy:SJC "ssh ops-v01-20a"

tmux new-window -t freecandy -d -n IAD "uptime; bash"
tmux split-window -t freecandy:IAD "ssh ops-v01-21a"

tmux new-window -t freecandy -d -n lab "uptime; bash"

tmux split-window -t freecandy:root "sudo bash"
tmux attach -t freecandy
